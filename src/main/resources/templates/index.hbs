{{#partial "content"}}

    <p> List of Field Operation Departments</p>

    {{#if departments}}
        <p> click on the Department's Name to view the employee Allocated !!</p>
    {{else}}
        <p>click<a href="/departments/new">here</a>to add an Department</p>
    {{/if}}

    {{#if departments}}

        <table class="table">
            <thead>
            <tr>
                <th scope="col">No.</th>
                <th scope="col">NAME</th>
                <th scope="col">DESCRIPTION</th>
            </tr>
            </thead>

            {{#each departments }}

                <tbody>
                <tr>
                    <td></td>
                    <td><a href="/departments/{{id}}">{{name}}</td>
                    <td>{{description}}</td>
                </tr>
                </tbody>
            {{/each}}
        </table>

    {{else}}
        <p>No Records</p>
    {{/if}}
    {{name}}
{{/partial}}

{{> layout.hbs}}